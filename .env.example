# NMOX Server Environment Configuration
# Copy this file to .env and update with your values

# Environment
NODE_ENV=development
NMOX_ENV=development

# Server Configuration
PORT=8080
HOST=0.0.0.0
API_PREFIX=/api
WS_PORT=8081

# Squeak Smalltalk
SQUEAK_IMAGE=/opt/nmox/lib/NMOXSqueak6.0-22148-64bit.image
SQUEAK_PORT=9009
SQUEAK_HEADLESS=true

# Database (optional - used with docker-compose --profile with-database)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=nmox
DB_USER=nmox
DB_PASSWORD=change_me_in_production
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Redis Cache (optional - used with docker-compose --profile with-cache)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# Security
JWT_SECRET=change_this_secret_key_in_production
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=another_secret_key_to_change

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=x/var/log

# Performance
MAX_WORKERS=4
CACHE_TTL=3600
REQUEST_TIMEOUT=30000

# WebAssembly
WASM_THREADS=4
WASM_MEMORY_LIMIT=512

# Development Tools
DEBUG=false
VERBOSE=false
WATCH_MODE=true

# External Services (optional)
GITHUB_TOKEN=
DISCORD_WEBHOOK_URL=
SENTRY_DSN=

# Feature Flags
ENABLE_METRICS=true
ENABLE_TRACING=false
ENABLE_PROFILING=false
ENABLE_HOT_RELOAD=true

# SMTP (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@nmox.org

# OAuth (optional)
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
OAUTH_REDIRECT_URI=http://localhost:8080/auth/callback