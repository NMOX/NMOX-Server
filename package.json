{
  "name": "nmox-server",
  "version": "3.0.0",
  "description": "New Media On X Server: A meta-framework implementing UNIX philosophy in web development",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node --experimental-wasm-modules index.js",
    "dev": "nodemon --watch x --watch bin --exec 'make run'",
    "build": "npm run build:wasm && npm run build:assets",
    "build:wasm": "cd x/lib/wasm && wasm-pack build --target web",
    "build:assets": "echo 'Asset build placeholder'",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testMatch='**/*.test.js'",
    "test:integration": "jest --testMatch='**/*.integration.js'",
    "test:squeak": "./bin/test-image.sh",
    "lint": "eslint . --ext .js,.mjs",
    "lint:fix": "eslint . --ext .js,.mjs --fix",
    "format": "prettier --write '**/*.{js,json,md,yml}'",
    "format:check": "prettier --check '**/*.{js,json,md,yml}'",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:dev": "docker compose --profile development up -d",
    "clean": "rm -rf node_modules x/tmp/* x/var/log/*",
    "setup": "./scripts/setup.sh",
    "benchmark": "./bin/nmox-benchmark",
    "docs": "./bin/nmox-docs",
    "kernel": "./bin/nmox-kernel"
  },
  "keywords": [
    "nmox",
    "meta-framework",
    "unix-philosophy",
    "smalltalk",
    "rust",
    "wasm",
    "webassembly",
    "live-programming"
  ],
  "author": "NMOX Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nmox/nmox-server.git"
  },
  "bugs": {
    "url": "https://github.com/nmox/nmox-server/issues"
  },
  "homepage": "https://nmox.org",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.16.0",
    "compression": "^1.7.4",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "@wasm-tool/wasm-pack": "^0.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "x/**/*.js",
      "!x/**/node_modules/**"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/x/tmp/"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended",
      "prettier"
    ],
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  }
}